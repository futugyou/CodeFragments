{
	"name": "C# (.NET)",
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"features": {
		"ghcr.io/devcontainers/features/dotnet:2": {
			"workloads": "aspire, wasm-tools"
		},
		"ghcr.io/dapr/cli/dapr-cli:0": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csdevkit",
				"EditorConfig.EditorConfig",
				"k--kato.docomment",
